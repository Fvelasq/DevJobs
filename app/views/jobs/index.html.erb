<div class="col-sm-3">
  <div class="panel panel-default filter">
    <div class="panel-heading">Filter Jobs</div>
    <div class="panel-body">
      <%= bootstrap_form_tag url: '/jobs', method: 'get' do %>
        <%= select_tag "category", options_from_collection_for_select(@categories, "id", "name"), include_blank: "Select Category", class: "btn btn-default btn-lg dropdown-toggle"%>
        <%= select_tag "location", options_for_select(@locations), include_blank: "Select Location", class: "btn btn-default btn-lg dropdown-toggle"%>
        <%= submit_tag "Filter", class: "btn btn-primary btn-outline btn-sm" %>
      <% end %>
    </div>
  </div>
</div> <!-- End Filter jobs -->



<div class="col-sm-6">
  
  <% @jobs.each do |job| %>
  <div class="well">
    <h3><%= link_to job.title, job_path(job)%></h3>
    <small><%= job.company %> | <%= job.posting_date %> | <%= fa_icon "map-marker" %> <%= job.location %> </small>
    <p><%= sanitize(truncate(job.description, length: 150)) %></p>
  </div>
  <% end %>
  <%= paginate @jobs %>
</div> <!-- end col-sm-6 -->

<div class="col-sm-3">

</div><!-- end col-sm-3 -->
