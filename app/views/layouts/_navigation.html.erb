<div class="container">
  <div class="header-inner">
    <h1><%= link_to (fa_icon 'laptop').to_s + "DevJobs", root_path %></h1>
    <nav role="navigation">
      <ul>
        <% if !current_user %>
            <li class="cta"><%= link_to "Sign up", new_user_registration_path %></li>
            <li class="cta"><%= link_to "Log in", new_user_session_path %></li>
        <% elsif current_user.company? %>
          <li class="cta"><%= link_to "Post a Job Offer", new_job_path %></li>
          <li class="cta"><%= link_to "Log out", destroy_user_session_path, :method => 'delete' %></li>
        <% else %>
        <li class="cta"><%= fa_icon 'user' %> Logged in as: <%= current_user.email %></li>
          <li class="cta"><%= link_to "Log out", destroy_user_session_path, :method => 'delete' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
